                </div>
              <% end %>
            <% else %>
              <% if @bookings.any? %>
                <div class="inner-card">
                <h4><%= booking.user.first_name %></h4>
                </div>
                <div class="inner-card">
                  <p><%= booking.start_date %></p>
                  <p><%= booking.end_date %></p>
                </div>
                <%= image_tag 'paris-map.jpg', height: 180, width: 238, id: "map" %>
                <div class="inner-card">
                  <p><%= booking.status %></p>
                </div>
                <div class="d-flex justify-content-around mb-3" id='accept'>
                  <%= link_to accepts_booking_path(booking), method: :patch, class: "btn-planning small" %>
                  <i class="fas fa-check"></i>
                  <%= link_to "Decline", decline_booking_path(booking), method: :patch, class: "btn-planning small" %>
                </div>
              <% else %>
                <div class="card-check-sitters">
                  <h4>You don't have any bookings yet!</h4>
                  <div class="btn-check-sitters">
                    <p><%= link_to 'Check sitters available around you!', profile_sitters_path, class: "btn btn-ghost" %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
