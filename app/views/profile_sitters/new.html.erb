<div class="card-container">
  <div class="form-card p-4 h-50 d-flex justify-content-center">
    <%= simple_form_for([@profile_sitter]) do |f| %>
      <div class="justify-content-center">
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit class:'btn-planning'%>
      </div>
    <% end %>
  </div>
</div>
