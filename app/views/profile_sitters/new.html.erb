<div class="card-container">
  <div class="form-card p-4 h-50 m-5 d-flex justify-content-center">
  <h2 class="fs-4 mb-5">When will you be available ?</h2>
    <%= simple_form_for([@profile_sitter]) do |f| %>
      <div class="justify-content-center">
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :price %>
        <div class="mb-1">Dates</div>
        <div class="d-flex justify-content-center">
            <%= f.text_field :start_date, placeholder: "From", data: {
          controller: "flatpickr",
          altInput: true,
          flatpickr_mode: 'range',
          flatpickr_date_format: "d/m/Y",
          flatpickr_min_date: Time.zone.now
        } %>
            <%= f.text_field :end_date, placeholder: "To", id: 'secondRangeInput' %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.button :submit, 'Set new availability', class:'btn-planning m-3'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
